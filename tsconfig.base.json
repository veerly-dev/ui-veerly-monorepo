{
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@ui-veerly-monorepo/source"],
    "paths": {
      "@veerly/shared/graphql": ["libs/shared/graphql/src/index.ts"],
      "@veerly/shared/graphql/*": ["libs/shared/graphql/src/*"],
      "@veerly/shared/service-hooks": ["libs/shared/service-hooks/src/index.ts"],
      "@veerly/shared/service-hooks/*": ["libs/shared/service-hooks/src/*"],
    }
  }
}

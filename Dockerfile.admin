# ---- Base Builder Image ----
FROM node:20-alpine AS builder

# Enable pnpm
RUN corepack enable
WORKDIR /app

ENV NX_CLOUD_ENABLED=false
ENV NX_DAEMON=false

# Copy workspace metadata
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json nx.json tsconfig.base.json eslint.config.mjs ./
COPY jest.config.ts jest.preset.js ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy app source
COPY apps/admin ./apps/admin
COPY libs ./libs

RUN pnpm nx run shared-service-hooks:build
RUN pnpm nx run shared-graphql:build
RUN pnpm nx run ui-kit:build

# Build using the Nx target defined in package.json scripts
RUN pnpm run admin:build

# ---- Runtime Image ----
FROM node:20-alpine

RUN corepack enable
WORKDIR /app

# Copy only whatâ€™s needed for runtime
COPY --from=builder /app/apps/admin/.next ./.next
COPY --from=builder /app/apps/admin/public ./public
COPY --from=builder /app/apps/admin/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules

ENV NODE_ENV=production
ENV PORT=3000
EXPOSE 3000

# Start via Nx target
CMD ["pnpm", "--filter", "@ui-veerly-monorepo/admin", "start"]